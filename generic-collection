from prefect import task

logger = logging.getLogger(__name__)

@task
def process_dataset(dataset_id: int, normalize: bool = False):
    # ... your logic here ...
    returndata = {"ok": True, "id": dataset_id, "normalized": normalize}
    logger.warning(f"{returndata}")
    return returndata

@task
def train_model(epochs: int = 10):
    # ... training logic ...
    returndata = {"trained": True, "epochs": epochs}
    logger.warning(f"{returndata}")
    return returndata


# You can also export plain functions (not decorated) and they will be called directly
def helper(a: int, b: int) -> int:
    returndata = a + b
    logger.warning(f"{returndata}")
    return returndata
